<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shrxc.sc.app.kj.LskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_title_bg">

        <ImageView
            android:id="@+id/lsk_acticity_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/app_back_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/kj_title_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lsk_acticity_title_zq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kj_zq_title_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="足球"
                android:textColor="@color/app_red_color_fa3243" />

            <TextView
                android:id="@+id/lsk_acticity_title_lq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="篮球"
                android:textColor="@color/app_white_color_ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_title_bg"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门"
                android:textColor="@color/app_white_color_ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_white_color_ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧洲"
                android:textColor="@color/app_white_color_ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_white_color_ffffff"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亚洲"
                android:textColor="@color/app_white_color_ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_white_color_ffffff"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美洲"
                android:textColor="@color/app_white_color_ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_white_color_ffffff"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杯赛"
                android:textColor="@color/app_white_color_ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_white_color_ffffff"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>





</LinearLayout>
