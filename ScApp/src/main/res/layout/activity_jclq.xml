<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color_f7f7f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.shrxc.sc.app.dntz.JclqActivity">

    <RelativeLayout
        android:id="@+id/jl_activity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/app_title_bg">

        <ImageView
            android:id="@+id/jl_activity_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/app_back_icon" />

        <TextView
            android:id="@+id/jl_activity_select_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/jz_xl_icon"
            android:gravity="center_vertical"
            android:text="胜平负"
            android:textColor="@color/app_white_color_ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jl_activity_sx_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/jz_sx_icon" />

            <ImageView
                android:id="@+id/jl_activity_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/jz_more_icon" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/jl_activity_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/app_white_color_ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="共8注" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="14"
                    android:textColor="@color/app_red_color_fa3243" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元" />
            </LinearLayout>

            <TextView
                android:id="@+id/jl_activity_sure_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/app_red_color_fa3243"
                android:paddingBottom="14dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:text="确定"
                android:textColor="@color/app_white_color_ffffff" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/jl_activity_bottom_layout">

            <ExpandableListView
                android:id="@+id/jl_activity_sf_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jl_activity_rfsf_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jl_activity_sfc_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jl_activity_dxf_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jl_activity_hhgg_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>

            <ExpandableListView
                android:id="@+id/jl_activity_dgtz_elv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"></ExpandableListView>
        </FrameLayout>

        <View
            android:id="@+id/jl_activity_tm_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22000000"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
